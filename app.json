{
  "expo": {
    "name": "ShopAI",
    "slug": "ShopAI",
    "version": "1.0.0",

    "scheme": "ShopAI",
    "platforms": ["ios", "android"],
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Shop AI to access your camera to scan products and find the best deals."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Shop AI to access your photos to find products from your gallery."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,

      "tsconfigPaths": true
    },

    "orientation": "portrait",
    "icon": "./assets/icon.png",

    "userInterfaceStyle": "light",

    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Allow Shop AI to access your camera to scan products and find the best deals.",
        "NSPhotoLibraryUsageDescription": "Allow Shop AI to access your photos to find products from your gallery."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    }
  }
}
